           <% if current_user %>
                <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                           <%= current_user.loggable.name %>
                          <span class="caret"></span>
                        </button>
                        
                        <% if current_user.loggable_type=="Entity" %>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                              
                              <li><%= link_to 'Mi area', projects_path(q: {entity_id_eq: current_user.loggable_id}, entity_id: current_user.loggable_id) %></li>
                              <li><%= link_to(" Cerrar sesión", destroy_user_session_path, method: :delete, class:  "fa fa-power-off") %></li>

                            </ul>
                        <% end %>
                        
                        <% if current_user.loggable_type=="Volunteer" %>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                              
                              <li><%= link_to 'Mi area', volunteer_projects_path(q: {volunteers_id_in: current_user.loggable_id}, volunteer_id: current_user.loggable_id) %></li>
                              <li><%= link_to(" Cerrar sesión", destroy_user_session_path, method: :delete, class:  "fa fa-power-off") %></li>

                            </ul>
                        <% end %>

                </div>   
          <% end %>      
        
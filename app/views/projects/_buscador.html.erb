

<%= search_form_for(@search, url:"/projects/search", :method => :get, remote: true) do |f| %>
<div class='form form-electronic buscarProyectos'>
<div class="bg-fluid0">
    <form class="form">

  <div class="panel panel-type1 searcher-diary nofluid">
    <div class="panel-heading">
        <div class="row">
                  <div class="col-md-2"></div>
                   <div class="col-md-8">
                      <div class="cajaBusqueda">

                       <div class="row">
                           <div class="col-sm-9">
                        <div class="conjuntoBusqueda">

                              <%= f.text_field :name_or_description_cont, placeholder: "Buscar un proyecto", class: "buscarInput" %>
                                <%= f.button "", class: "lupa"  %>
                        </div>
                    </div>
                       <div class="col-sm-3 text-right">
                           <a href="#searcher-diary" data-toggle="collapse" class="panel-title collapsed verFiltros">Ver filtros</a>
                       </div>

                       </div>
                      </div>
                   </div>

                  <div class="col-md-2"></div>

                </div>

    </div>
    <div class="panel-body collapse in" id="searcher-diary">

                

                <div class="row">
                    <div class="col-sm-3">
                        <div class="form-group">
                          <div class="form-group date-field">
                            <span class="labelUp">Fecha <span class="asterisco">*</span></span>
                              <%= f.text_field :timetables_execution_date_eq, :class => "form-control-date" %>
                          </div>    
                        </div>
                    </div>
                    <div class="col-sm-3">
                         <div class="form-group">
                            <span class="labelUp">Distrito <span class="asterisco">*</span></span>
                            <%= f.select :addresses_district_id_eq, @districts, include_blank: "", selected: "" %>  
                            
                        </div>
                    </div>
                    <div class="col-sm-3">
                         <div class="form-group">
                            <label for="id_propuesta">
                            <span class="labelUp">Barrio </span>
                            <%= f.select :addresses_borough_eq, @boroughs %>
                            
                            </label>
                        </div>
                    </div>
                </div>



                <legend class="form-legend">Tematica</legend>
                <div class="row">
                  <% @areas.each do |area| %>  
                    <div class="col-sm-6 col-md-2">
                         <div class="form-group">
                           <label for="">
                                <%= check_box_tag "q[areas_name_in][]", area.name %> <%= area.name %>
                           </label>

                        </div>
                    </div>
                  <% end %>  
                </div>

                <!--
                 <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <span class="labelUp">Descripci√≥n <span class="asterisco">*</span></span>
                              <%= f.text_field :areas_name_in %>
                        </div>
                    </div>
                   
                </div>
                -->




</div>
        
</div>                            
        
</div>

</form>

</div>

<% end %>


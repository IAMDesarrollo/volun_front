<%= javascript_include_tag 'activities_show' %>

<%= javascript_tag do %>
  var locations = <%= raw @locations_activity.to_json %>;
  var multiple = true;
  var url_map = "<%= Rails.application.secrets.url_map %>";
  var url_rotulacion = "<%= Rails.application.secrets.url_rotulacion %>";

  var list_days = <%= raw @list_days_activity.to_json %>;
  var day_c = <%= raw @day.to_json %>
  var id = <%= @activity.id %>
<% end %>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 mt45" >
            <i class="fa fa-chevron-left volverArrow" aria-hidden="true"></i>
            <%= link_to 'Actividades', activities_path,class: "volver" %>
        </div>
    </div>
</div>

<div  class="container-fluid single actividadSingle">
<div class="row">
<div class="col-md-4 col-md-push-8">

<div class="sidebarActividad">
<div class="bloque first">
  <div id="fechas">
    <div class="rangoFechas">
       <h3>
         <%= @activity.start_date.strftime('%d/%m/%Y') %>
        <% if @activity.start_date.strftime('%d/%m/%Y') != @activity.end_date.strftime('%d/%m/%Y') %>
           - <%= @activity.end_date.strftime('%d/%m/%Y') %>
        <% end %>
      </h3>
    </div>

    <div class="info-actividad">
      <div id="fecha">

      </div>
    </div>


  <div id="mapaW">
    <div id="mapDiv">
    </div>
  </div>




       <div id="timetables">
        <ul class="direcciones">
             <%= render partial: "timetables/timetables_by_date_activity", locals: {timetable: @timetables, day: @day} %>

        </ul>

    </div>

  </div>





</div>

 <div class="bloque">
                <div id="meta">
                <div class="brand">
                        <div class="logoW">
                     <%= render partial: "links/link", collection: @activity.entity.links.logo %>

                </div>
                <h5><%= @activity.entity.name %></h5>
                </div>






      </div>
            </div>
<div class="bloque">

     <% if @activity.links.document.present? %>
      <div id="documentacion">
        <h5> Documentación </h5>
        <% @activity.links.document.each do |link| %>

         <p> <%= link.description %></p>

<div class="text-right">
    <%= link_to 'Descargar', download_link_path(link.id), class: "event-link negative" %>
</div>

        <% end %>

      </div>
    <% end %>
</div>
   <div class="bloque">

    <div id="proyectosAsociados">
      <h5> Proyecto asociado </h5>
      <% if @activity.project.present? %>
        <%= link_to project_path(@activity.project) do %>
         <div class="cardProyectoAsociado">
            <div class="row" style="margin:0">
              <div class="col-xs-4 no-padding-left no-padding-right">
              <figure>
                   <%= render partial: "links/link", collection: @activity.project.links.logo %>
              </figure>
             </div>
              <div class="col-xs-8">
              <div class="flex">
                <h3>
                  <%= @activity.project.name %>
                </h3>
              </div>
              </div>
          </div>
         </div>
        <% end %>
      <% end %>

    </div>

   </div>


 </div>
</div>


<div class="col-md-8 col-md-pull-4">
<h3 class="summary-title"><%= @activity.name %></h3>

<% if @activity.area.present? %>
  <div class="tags">
      <span class="tag"><i></i><%= @activity.area.name.downcase %></span>

  </div>
<% end %>
<div role="tabpanel" class="tab-pane active carousel" id="tpi-tab2">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
      <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
    <% @activity.links.logo.each do |link| %>
      <div class="item active">
        <%= render partial: "links/link", locals: { link: link} %>
      </div>
    <% end %>
    <% @activity.links.image.each do |link| %>
      <div class="item">
            <%= render partial: "links/link", locals: { link: link} %>
      </div>
     <% end %>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
     <i class="fa fa-chevron-left" aria-hidden="true"></i>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
      <i class="fa fa-chevron-right" aria-hidden="true"></i>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<div class="detalle">
  <div class="nofluid">
    <div class="tramites-content">
     <div class="tiny-text">
          <p> <%= @activity.description %> </p>
      </div>
    </div>

    <div class="item noTitle">
        <h3 class="">Enlaces</h3>
        <dl class="dl-horz">
          <% @activity.links.url.each do |link| %>
              <dd><a href="<%= link.path %>"><%= link.description %></a></dd>
          <% end %>
        </dl>
    </div>

  </div>
</div>




<div class="bg-fluid5 nofluid">
  <div class="videoplayer row">
    <div class="col-sm-4 cabecera">
      <h4 class="title">Galería de videos</h4>
    </div>
    <% @activity.links.video.each do |link| %>
    <div class="col-sm-12">
      <div class="currentvideo" data-height="308" data-width="450" data-url="" data-expressInstallSwfurl="" data-file="" data-logo="" data-image="" data-urlhtml5= "<%= link.path %>" >
      </div>
    </div>
    <% end %>
  </div>
</div>

</div>
</div>
</div>

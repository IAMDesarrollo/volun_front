<% if @timetables.current_page > 1 %>
  $('#activities').append('<%= escape_javascript(render partial: 'timetables/timetable', collection: @timetables)  %>');
<% else %>
  $('#numActividades').html ('<%= escape_javascript(render partial: 'numActivities', locals: {events: @num_records}) %>')
  $('#activities').html('<%= escape_javascript(render partial: 'timetables/timetable', collection: @timetables) %>');
<% end %>
$('#scroll_activities').html('<%= escape_javascript(render partial: 'shared/scroll_infinite_activities', locals: {records: @timetables, num_records: @num_records}) %>');
<div class="mc-acceso nofluid">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="panel panel-type1">
        <div class="panel-heading">
            <h3 class="panel-title">Formulario de registro</h3>

        </div>
        <div class="panel-body">
            <div class="row">

                <div class="col-sm-6 col-xs-6 col-md-12">
                    <div class="mc-acceso-item login">
                        <div class="content">
                            <h4 class="legend legend-user">Datos a rellenar</h4>
                            <div class="form-group first">
                                <span class="labelUp">Correo electrónico</span>
                                <!-- <input type="text" class="form-control" id="correoelectronico" name="correoelectronico" placeholder="Correo electrónico" /> -->
                                <%= f.email_field :email, autofocus: true, placeholder:"email", class:  "form-control" %>
                            </div>
                            <div class="form-group">
                                <!-- <input type="text" class="form-control" id="correoelectronico" name="correoelectronico" placeholder="Correo electrónico" /> -->
                                <%= f.check_box :perfil,  class:"ftl" %> <span class="labelCheck ftl">¿Es una entidad? </span>

                            </div>
                            <br/>
                            <div class="form-group">
                                <span class="labelUp">Contraseña</span>
                                <!-- <input type="password" class="form-control" id="contrasenia" name="contrasenia" placeholder="Contraseña" /> -->
                                <%= f.password_field :password, autocomplete: "off" , class:  "form-control" ,placeholder:"Contraseña para entrar a este sitio web" %>
                            </div>
                            <div class="form-group">
                                <span class="labelUp">Confirmación contraseña</span>
                                <!-- <input type="password" class="form-control" id="contrasenia" name="contrasenia" placeholder="Contraseña" /> -->
                                <%= f.password_field :password_confirmation, autocomplete: "off",placeholder:"Escriba la contraseña anterior", class:  "form-control" %>
                            </div>
                            <div class="buttons">
                                <button class="button button4 button-icon">Registrarse <i class="button-icon-arrowright"></i></button>

                                <ul class="list-inline">
                                    <!--<li><a href="#">Regístrate ahora</a></li>
                                    <li><a href="#">Olvidé mi contraseña</a></li> -->
                                    <%= render "devise/shared/links" %>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% end %>
</div>
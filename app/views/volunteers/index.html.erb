<p id="notice"><%= notice %></p>

<h1>Listing Volunteers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>First surname</th>
      <th>Second surname</th>
      <th>Age</th>
      <th>Id number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @volunteers.each do |volunteer| %>
      <tr>
        <td><%= volunteer.name %></td>
        <td><%= volunteer.first_surname %></td>
        <td><%= volunteer.second_surname %></td>
        <td><%= volunteer.age %></td>
        <td><%= volunteer.id_number %></td>
        <td><%= link_to 'Show', volunteer %></td>
        <td><%= link_to 'Edit', edit_volunteer_path(volunteer) %></td>
        <td><%= link_to 'Destroy', volunteer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


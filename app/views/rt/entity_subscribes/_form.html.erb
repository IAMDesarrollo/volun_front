          <%= f.text_field :name %>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-3">
          <span class="labelUp"><%= Rt::EntitySubscribe.human_attribute_name(:entity_type) %><span class="asterisco">*</span></span>
          <%= f.select :entity_type_id, entity_types_select_options %>
        </div>


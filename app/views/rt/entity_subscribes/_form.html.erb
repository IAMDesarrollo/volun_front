    </div>
    
    <div class="col-xs-12 col-sm-12 col-md-5">
            <span class="labelUp"><%= Rt::EntitySubscribe.human_attribute_name(:road_name) %> <span class="asterisco">*</span></span>
            <%= f.text_field :road_name %>
    </div>    

    <div class="col-xs-12 col-sm-12 col-md-2">
            <span class="labelUp"><%= Rt::EntitySubscribe.human_attribute_name(:number_type) %> <span class="asterisco">*</span></span>
            <%= f.select :number_type, number_types_select_options %> 
    </div>

    <div class="col-xs-12 col-sm-12 col-md-2">
            <span class="labelUp"><%= Rt::EntitySubscribe.human_attribute_name(:road_number) %> <span class="asterisco">*</span></span>
            <%= f.text_field :road_number %>
    </div>
 </div> 
</div>

<div class="row">
  <div class="form-group">
    <div class="col-xs-12 col-sm-12 col-md-4">     
          <span class="labelUp"><%= Rt::EntitySubscribe.human_attribute_name(:postal_code) %> <span class="asterisco">*</span></span>
          <%= f.text_field :postal_code %>
    </div>

    <div class="col-xs-12 col-sm-12 col-md-4">     
          <span class="labelUp"><%= Rt::EntitySubscribe.human_attribute_name(:town) %> <span class="asterisco">*</span></span>
          <%= f.text_field :town %>
    </div>

    <div class="col-xs-12 col-sm-12 col-md-4">     
          <span class="labelUp"><%= Rt::EntitySubscribe.human_attribute_name(:province_id) %> <span class="asterisco">*</span></span>
          <%= f.select :province_id, provinces_select_options %> 
    </div>
  </div>
</div>
<br/> 
<legend class="parrafo">5. Motivo</legend>    
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12">
        <div class="form-group">
          <span class="labelUp"><%= RequestForm.human_attribute_name(:request_reason_id) %> <span class="asterisco">*</span></span>
          <%= f.fields_for(:request_form_attributes, @rt_entity_subscribe.request_form) do |f_r| %>
              <%= f_r.select :request_reason_id, request_reasons_select_options %> 
          <% end %>    
        </div>
      </div>
    </div>

    <div class="row" id="other_motive">
      <div class="col-xs-12 col-sm-12 col-md-12">
        <div class="form-group">
          <span class="labelUp"><%= Rt::EntitySubscribe.human_attribute_name(:other_subscribe_reason) %> <span class="asterisco">*</span></span>

          <%= f.text_field :contact_name %>
        
      </div>

      <div class="col-xs-12 col-sm-12 col-md-4">
          <span class="labelUp"><%= Rt::EntitySubscribe.human_attribute_name(:contact_last_name) %><span class="asterisco">*</span></span>
          <%= f.text_field :contact_last_name %>
        
      </div>

      <div class="col-xs-12 col-sm-12 col-md-4">
          <span class="labelUp"><%= Rt::EntitySubscribe.human_attribute_name(:contact_last_name_alt) %> </span>
          <%= f.text_field :contact_last_name_alt %>
        
      </div>
     </div>   
    </div>

    <div class="row">
      <div class="form-group">
        
        <div class="col-xs-12 col-sm-12 col-md-4">
          <span class="labelUp"><%= Rt::EntitySubscribe.human_attribute_name(:phone_number) %> <span class="asterisco">*</span></span>
          <%= f.text_field :phone_number %>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-4">
          <span class="labelUp"><%= Rt::EntitySubscribe.human_attribute_name(:phone_number_alt) %> </span>
          <%= f.text_field :phone_number_alt %>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-4">
          <span class="labelUp"><%= Rt::EntitySubscribe.human_attribute_name(:email) %> <span class="asterisco">*</span></span>
          <%= f.text_field :email %>
        </div>
      </div>
    </div>
    <br/>
    <legend class="parrafo"><h4>3. Datos del representante</h4></legend>

    <div class="row">
     <div class="form-group"> 
      <div class="col-xs-12 col-sm-12 col-md-4">
        <span class="labelUp"><%= Rt::EntitySubscribe.human_attribute_name(:representative_name) %> <span class="asterisco">*</span></span>
          <%= f.text_field :representative_name %>
      </div>

      <div class="col-xs-12 col-sm-12 col-md-4">
          <span class="labelUp"><%= Rt::EntitySubscribe.human_attribute_name(:representative_last_name) %> <span class="asterisco">*</span></span>
          <%= f.text_field :representative_last_name %>

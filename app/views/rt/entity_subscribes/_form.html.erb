      <div class="col-xs-12 col-sm-12 col-md-4">
          <span class="labelUp"><%= Rt::EntitySubscribe.human_attribute_name(:representative_last_name_alt) %> </span>
          <%= f.text_field :representative_last_name_alt %>
      </div>

     </div>
    </div>

    

    
    <br/>
    <legend class="parrafo">4. Direcci√≥n</legend>

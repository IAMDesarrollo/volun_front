<%= form_for(@rt_activity_publishing, default_form_options) do |f| %>
<div class="form form-electronic">
  <%= render(partial: 'shared/errors', locals: {model_name: @rt_activity_publishing})%>
  <legend class="parrafo"><%= main_title(t("rt_activity_publishing.title", model: RtActivityPublishing.model_name.human)) %></legend>
  
  <p class="notes">
   Los campos marcados con <em class="asterisco">*</em> son obligatorios.
  </p>
  
    <div class="row">
      <div class="form-group">
        <div class="col-xs-12 col-sm-12 col-md-6">
          <span class="labelUp"><%= t('activerecord.attributes.rt_activity_publishing.name') %> <span class="asterisco">*</span></span>
          <%= f.text_field :name %>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-6">
          <span class="labelUp"><%= t('activerecord.attributes.rt_activity_publishing.organizer') %> <span class="asterisco">*</span></span>
          <%= f.text_field :organizer %>
        </div>
      </div>
    </div>

    
    <div class="row">
      <div class="form-group">
        <div class="col-xs-12 col-sm-12 col-md-12">
          <span class="labelUp"><%= t('activerecord.attributes.rt_activity_publishing.description') %> <span class="asterisco">*</span></span>
          <%= f.text_field :description %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="form-group">
        <div class="col-xs-12 col-sm-12 col-md-5">
          <span class="labelUp"><%= t('activerecord.attributes.rt_activity_publishing.project') %> <span class="asterisco">*</span></span>
          <%= f.select :project_id, entity_projects_select_options(current_user.id) %>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-4">
          <span class="labelUp"><%= t('activerecord.attributes.rt_activity_publishing.execution_date') %> <span class="asterisco">*</span></span>
          <%= f.text_field :execution_date, :class => "form-control-date" %>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-3">
          <span class="labelUp"><%= t('activerecord.attributes.rt_activity_publishing.execution_hour') %> <span class="asterisco">*</span></span>
          <%= f.text_field :execution_hour %>
        </div>
      </div>
    </div>

    
    <%= render partial: 'shared/addressInternet', locals: {f: f} %>

    


</div>

<div class="button-group text-right">
  <%= f.button t('application.submit'), :class => 'button button4' %>
</div>
<% end %>

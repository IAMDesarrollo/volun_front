<%= form_for(@rt_volunteer_amendment, default_form_options) do |f| %>
<div class="form form-electronic">
  <%= render(partial: 'shared/errors', locals: {model_name: @rt_volunteer_amendment})%>
  <legend class="parrafo"><%= main_title(t("rt_volunteer_amendment.title", model: RtVolunteerAmendment.model_name.human)) %></legend>
  
  <p class="notes">
   Los campos marcados con <em class="asterisco">*</em> son obligatorios.
  </p>
  
    <div class="row">
      <div class="form-group">
        <div class="col-xs-12 col-sm-12 col-md-4">
          <span class="labelUp"><%= t('activerecord.attributes.rt_volunteer_amendment.email') %> <span class="asterisco">*</span></span>
          <%= f.text_field :email %>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-4">
          <span class="labelUp"><%= t('activerecord.attributes.rt_volunteer_amendment.phone_number') %> <span class="asterisco">*</span></span>
          <%= f.text_field :phone_number %>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-4">
          <span class="labelUp"><%= t('activerecord.attributes.rt_volunteer_amendment.phone_number_alt') %> <span class="asterisco">*</span></span>
          <%= f.text_field :phone_number_alt %>
        </div>
      </div>
    </div>

    <%= render partial: 'shared/addressInternet', locals: {f: f} %>

</div>

<div class="button-group text-right">
  <%= f.button t('application.submit'), :class => 'button button4' %>
</div>
<% end %>
